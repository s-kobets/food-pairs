{
  "compilerOptions": {
    "module": "ES2020", 
    "moduleResolution": "bundler",
    "target": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "./dist",
    "types": ["vite/client", "vite/types/importMeta.d.ts"]
  },
  "include": ["src", "types.ts", "types.js"],
  "exclude": ["node_modules", "dist"],
} 